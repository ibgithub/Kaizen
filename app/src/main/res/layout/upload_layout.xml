<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Program Lapangan Bersih"
        android:gravity="center"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:textSize="18sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp">
            <LinearLayout
                android:id="@+id/kelasProgram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingBottom="@dimen/_30sdp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_250sdp"
                    android:src="@drawable/lapangan"
                    android:layout_margin="@dimen/_10sdp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_program"
                    android:textColor="@color/darkgray"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:textSize="14sp"/>
                <Button
                    android:id="@+id/beforeBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/bg_blue"
                    android:layout_margin="@dimen/_5sdp"
                    android:text="Upload Foto Sebelum Program"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"/>
                <Button
                    android:id="@+id/afterBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/bg_blue"
                    android:layout_margin="@dimen/_5sdp"
                    android:text="Upload Foto Setelah Program"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"/>
                <Button
                    android:id="@+id/videoBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/bg_blue"
                    android:layout_margin="@dimen/_5sdp"
                    android:text="Upload Video Presentasi Program"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"/>
                <Button
                    android:id="@+id/cancelBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/bg_blue"
                    android:layout_margin="@dimen/_5sdp"
                    android:text="Kembali"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>
</LinearLayout>
